---
import BaseLayout from 'layouts/BaseLayout.astro'

interface Props {
    title: string,
    description: string,
    step: number
}

const { title, description, step } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <h1>Setup Process</h1>

  <!-- Step Indicator -->
  <div class="flex justify-center space-x-2">
    <!-- Step 1 -->
    <a href="/create">
      <div class={`w-4 h-4 rounded-full ${step === 1 ? 'bg-indianred' : 'bg-gray-300'}`}></div>
    </a>

    <!-- Step 2 -->
    <a href="/create/step2">
      <div class={`w-4 h-4 rounded-full ${step === 2 ? 'bg-indianred' : 'bg-gray-300'}`}></div>
    </a>

    <!-- Step 3 -->
    <a href="/create/step3">
      <div class={`w-4 h-4 rounded-full ${step === 3 ? 'bg-indianred' : 'bg-gray-300'}`}></div>
    </a>

    <!-- Step 4 -->
    <a href="/create/step4">
      <div class={`w-4 h-4 rounded-full ${step === 4 ? 'bg-indianred' : 'bg-gray-300'}`}></div>
    </a>
  </div>
  <slot/>
  <!-- Buttons -->
  <div class="flex justify-center mt-6 space-x-4">
    {step > 1 && 
      <a href={`/create${step === 2 ? '' : '/step' + (step - 1)}`} class="btn btn-primary">
        Back
      </a>
    }

    {step < 4 &&
      <a href={`/create/step${step + 1}`} class="btn btn-primary">
        Next
      </a>
    }

    {step === 4 &&
      <button class="btn btn-primary">
        Start Process
      </button>
    }
  </div>
  <br/>
</BaseLayout>
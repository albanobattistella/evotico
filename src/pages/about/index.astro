---
import logo from "@assets/logo.png";
import { t, l } from "astro-i18n";
import BaseLayout from "@layouts/BaseLayout.astro";
import ContentDoc from "@components/ui/ContentDoc.astro";
import Footer from "@components/navigation/Footer.astro";

---

<BaseLayout title={t('buttons.about')} description={t('description')}>
    <div class="flex items-center flex-col">
      <img width="220" class="m-10" id="logo" alt="Evotico logo" src={logo.src} />
      <h1>Evotico</h1>
      <h2>{t('homepage.subheader')}</h2>
    </div>

    <ContentDoc file_name="Introduction"/>
    <div class="flex justify-center">
      <a class="btn text-btn m-2" href={l('/guide')}>{t('homepage.getStarted')}</a>
    </div>
    <br/>
    <Footer/>
</BaseLayout>

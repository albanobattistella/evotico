---
import logo from "assets/logo.png";
import { t, changeLanguage } from "i18next";
import BaseLayout from "layouts/BaseLayout.astro";
import ContentDoc from "@/ui/ContentDoc.astro";
import { localizePath } from "astro-i18next";

changeLanguage("de");
---

<BaseLayout title={t('buttons.about')} description={t('description')}>
    <div class="flex items-center flex-col">
      <img width="128" id="logo" alt="Ukuvota logo" src={logo.src} />
      <h1>Ukuvota</h1>
    </div>

    <ContentDoc file_name="Introduction"/>
    <div class="flex justify-center">
      <a href={localizePath('/create')} class="btn p-2 btn-primary">Setup Process</a>
    </div>
</BaseLayout>


---
import { t, changeLanguage } from "i18next";
import { localizePath } from "astro-i18next";
import BaseLayout from "@layouts/BaseLayout.astro";

changeLanguage("de");

let url = localizePath("/dashboard");
const firstVisit = Astro.cookies.get("firstVisit");
if (!firstVisit) {
    Astro.cookies.set("firstVisit", "true", { path: "/", httpOnly: true });
    url = localizePath("/about");
}
return Astro.redirect(url);
---

<BaseLayout title={t('buttons.home')} description={t('description')}/>
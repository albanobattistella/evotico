{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "isolatedModules": true,
    "types": [
      "astro/client"
    ],
    "jsx": "preserve",
    "paths": {
      "content/*": ["src/content/*"],
      "assets/*": ["src/assets/*"],
      "composable/*": ["src/composable/*"],
      "interfaces/*": ["src/interfaces/*"],
      "services/*": ["src/services/*"],
      "helpers/*": ["src/helpers/*"],
      "stores/*": ["src/stores/*"],
      "lib/*": ["src/lib/*"],
      "@/*": ["src/components/*"]
    },    
  },
  "include": ["src/**/*", "api/**/*", "src/lib/**/*"],
  "exclude": ["dist"]
}

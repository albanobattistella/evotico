{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["api/*"],
      "@content/*": ["src/content/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@layouts/*": ["src/layouts/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@lib/*": ["lib/*"],
      "@components/*": ["src/components/*"]
    },    
  },
  "include": ["src/**/*", "src/pages/api/**/*", "lib/**/*"],
  "exclude": ["dist"]
}
